<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:layout_marginTop="8dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/blue5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/unit"
            android:text="asdlkalskdaklsdj klajsdasldkalskd"
            android:maxLines="2"
            android:ellipsize="end"
            android:fontFamily="@font/sf_pro_400"
            android:textSize="14sp"
            android:textColor="@color/grey1"/>

        <TextView
            android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/icMenu"
            android:layout_marginHorizontal="16dp"
            android:text="1 Unit"
            android:fontFamily="@font/sf_pro_400"
            android:textColor="@color/blue4"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/icMenu"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_more_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/unit"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>